<%- include('./includes/head.ejs') %>
<%- include('./includes/nav.ejs') %>

<body style="    background-color: var(--light); margin-top: 2rem;">
    <%- messages()%>
    <div class="container-fluid" style="padding-right: 0;padding-left: 0;">     
        <div class="row"  style="margin-right: 0;margin-left: 0;">
            <div class="col-sm-12 col-md-12 col-lg-12 " style="padding-right: 0;padding-left: 0;">
                <h1 class="heading" style="margin-top: 5%;" >
                    CREATE BLOG
                </h1>
            </div>
        </div>
      </div>
    </div>
    <div class="container-fluid" style="padding-right: 0;padding-left: 0;"> 
        <div class="row"   style="margin-right: 0;margin-left: 0;">
            <div class="col-sm-12 col-md-12 col-lg-12" style="padding-right: 0;padding-left: 0;" >
                <form class="create-form"  action="<% if (editing) { %> /read/<%=post._id%><% }else{ %>/read<% }%>"  method="POST" enctype="multipart/form-data" >
                    <!-- <%- messages()%> -->
                    
                    <div class="form-group" style="display: inline-flex;" >
                        <label for="title"> Title:</label>
                        <input style="position: relative;left: 1rem;" class="form-control" type="text" name="title" value="<% if (editing) { %><%= post.title %><% } %>">
                    </div>
                    <br>
                    <div class="form-group" style="display: inline-flex;">
                            <label for="category">Category:</label>
                            <select style="position: relative;left: 1rem;" class="form-control" name="category" >
                                <option  value="<% if (editing) { %><%= post.category %><% } %>"> <% if (editing) { %><%= post.category%><% }else{ %>Select your option<% }%></option>
                                <%for(var i=0; i < categories.length; i++) {%>
                                    <option value="<%= categories[i].name%>" ><%= categories[i].name%></option>
                                <% } %>
                            </select>
                        
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12" style="padding-right: 0;padding-left: 0;">
                        <h6>*click <a  href="/categories/add">here</a> if you want to add new category 
                        </h6>
                    </div>
                    <div class="form-group" >
                        <label for="body">Body :</label>
                        <textarea class="ckeditor" name="body" id="body" ><% if (editing) { %><%= post.body %><% } %></textarea>
                    </div>
                    <div class="form-group" style="display: inline-flex;">
                        <label for="image">Image:</label>
                        <input
                          type="file"
                          name="image"
                          id="image"
                          style="margin-left: 3%;width: 100%;"
                          value="<% if (editing) { %><%= post.imageUrl %><% } %>"
                        />
                    </div>
                    <!-- <div class="form-group" style="display: inline-flex;">
                        <label for="imageUrl">Image URL</label>
                        <input style="position: relative;left: 4rem;" type="text" name="imageUrl" class="form-control" value="<% if (editing) { %><%= post.imageUrl %><% } %>">
                    </div> -->
                    <div class="form-group" style="display: none;">
                        <label for="author">Author:</label>
                        <input  class="form-control" type="text" name="author" value="<% if (editing) { %><%= post.author %><% }else{ %><%= currentUser.name %><% }%>">
                    </div>
                    <hr>
                    <button  class="btn btn-default btn-primary" name="submit" type="submit" value="save">Save</button>
            
                    <script src="/ckeditor/ckeditor.js" type="text/javascript"></script>
                    <script >CKEDITOR.replace('body');</script>
                    
                </form>
            </div>
        </div>
    </div>
    
    <script>
        
        document.getElementById('addCategory').addEventListener('click', redirect);
        
        // // redirect function
        function redirect() {
            //look for search id
            
            //redirect page
            // alert('Search Icon Clicked')
            window.location.href = "https://bloggers-ac27.herokuapp.com/categories/add";

        }
    </script>
</body>

